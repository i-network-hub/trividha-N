    <script>
      $(".table tbody td a.edit_with_get_data").click(function () {
        //manadetory data
        let _id = $(this).attr("data-id");
        let _api = $(this).attr("data-api");

        let request = {
          url: `https://trividhaa.herokuapp.com/api/${_api}?id=${_id}`,
          method: "GET",
        };
        $.ajax(request).done(function (response) {
          $("#edit_data").attr("action", `/api/${_api}/${_id}`);
          $("#edit_name").val(response.name);
          tinymce.get("mytextarea_edit").setContent(`${response.content}`);
          // tinymce.init({
          //   selector: "#mytextarea_edit",
          //   setup: function (editor) {
          //     editor.on("init", function (e) {
          //       editor.setContent(`${response.content}`);
          //     });
