    <script>
      // Fot get on load change edit
      $(".getAllCategories").click(function () {
        console.log("inside");
        let request = {
          url: `https://trividhaa.herokuapp.com/api/disease_category`,
          method: "GET",
        };
        $.ajax(request).done(function (response) {
          console.log(response);
          let getIdName = document.getElementById("selectOptionsCategoryEdit");
          for (let i = 0; i < response.length; i++) {
            getIdName.innerHTML += `<option data-id="${response[i]._id}" value="${response[i].category}">${response[i].category}</option>`;
          }
        });
      });
      $("#selectOptionsCategoryEdit").change(function () {
        let _id = $(this).find(":selected").data("id");
        let request = {
          url: `https://trividhaa.herokuapp.com/api/disease_category?id=${_id}`,
          method: "GET",
        };
        $.ajax(request).done(function (response) {
          let getIdName = document.getElementById("selectOptionsEdit");
          getIdName.innerHTML = `<option value="selected"> Select Disease </option>`;
          for (let i = 0; i < response.disease.length; i++)
            getIdName.innerHTML += `<option value="${response.disease[i]}">${response.disease[i]}</option>`;
        });
      });

      // Fot get on load change onload
      $("#disease_category_name").change(function () {
        let _id = $(this).find(":selected").data("id");
        let request = {
          url: `https://trividhaa.herokuapp.com/api/disease_category?id=${_id}`,
          method: "GET",
