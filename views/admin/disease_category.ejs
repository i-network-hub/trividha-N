                          >
                            <thead>
                              <tr>
                                <th>Sl.no</th>
                                <th>Image</th>
                                <th>Category</th>
                                <th>Diseases</th>
                                <th>Edit</th>
                                <th>Delete</th>
                              </tr>
                            </thead>
                            <tbody>
                              <%for(let i=0; i < disease_category.length;
                              i++){%>
                              <tr>
                                <td class="">
                                  <span
                                    class="
                                      text-dark-75
                                      font-weight-bolder font-size-lg
                                    "
                                    ><%=i+1%></span
                                  >
                                </td>
                                <td class="block-img">
                                  <img
                                    src="../<%=disease_category[i].image%>"
                                    alt=""
                                  />
                                </td>
                                <td class="">
                                  <span
                                    class="
                                      text-dark-75
                                      font-weight-bolder
                                      d-block
                                      font-size-lg
                                    "
                                    ><%=disease_category[i].category%></span
                                  >
                                </td>
                                <td class="">
                                  <%
                                  disease_category[i].disease.forEach(function(user){
                                  %>
                                  <span
                                    class="
                                      text-dark-75
                                      font-weight-bolder
                                      d-block
                                      font-size-lg
                                    "
                                    ><%=user%></span
                                  ><br />
                                  <% }); %>
                                </td>
                                <td class="pr-0">
                                  <a
                                    class="
                                      btn
                                      btn-icon
                                      btn-light
                                      btn-hover-primary
                                      btn-sm
                                      mx-3
                                      edit_with_get_data
                                    "
                                    data-id="<%=disease_category[i]._id%>"
                                    data-api="disease_category"
                                    data-category="<%=disease_category[i].category%>"
                                    data-disease="<%=disease_category[i].disease%>"
                                    data-toggle="modal"
                                    data-target="#staticBackdrop"
                                  >
                                    <span
                                      class="
                                        svg-icon svg-icon-md svg-icon-primary
                                      "
                                    >
                                      <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        xmlns:xlink="http://www.w3.org/1999/xlink"
                                        width="24px"
                                        height="24px"
                                        viewBox="0 0 24 24"
                                        version="1.1"
                                      >
                                        <g
                                          stroke="none"
                                          stroke-width="1"
                                          fill="none"
                                          fill-rule="evenodd"
                                        >
                                          <rect
                                            x="0"
                                            y="0"
                                            width="24"
                                            height="24"
                                          ></rect>
                                          <path
                                            d="M12.2674799,18.2323597 L12.0084872,5.45852451 C12.0004303,5.06114792 12.1504154,4.6768183 12.4255037,4.38993949 L15.0030167,1.70195304 L17.5910752,4.40093695 C17.8599071,4.6812911 18.0095067,5.05499603 18.0083938,5.44341307 L17.9718262,18.2062508 C17.9694575,19.0329966 17.2985816,19.701953 16.4718324,19.701953 L13.7671717,19.701953 C12.9505952,19.701953 12.2840328,19.0487684 12.2674799,18.2323597 Z"
                                            fill="#000000"
                                            fill-rule="nonzero"
                                            transform="translate(14.701953, 10.701953) rotate(-135.000000) translate(-14.701953, -10.701953)"
                                          ></path>
                                          <path
                                            d="M12.9,2 C13.4522847,2 13.9,2.44771525 13.9,3 C13.9,3.55228475 13.4522847,4 12.9,4 L6,4 C4.8954305,4 4,4.8954305 4,6 L4,18 C4,19.1045695 4.8954305,20 6,20 L18,20 C19.1045695,20 20,19.1045695 20,18 L20,13 C20,12.4477153 20.4477153,12 21,12 C21.5522847,12 22,12.4477153 22,13 L22,18 C22,20.209139 20.209139,22 18,22 L6,22 C3.790861,22 2,20.209139 2,18 L2,6 C2,3.790861 3.790861,2 6,2 L12.9,2 Z"
                                            fill="#000000"
                                            fill-rule="nonzero"
                                            opacity="0.3"
                                          ></path>
                                        </g>
                                      </svg>
                                    </span>
                                  </a>
                                </td>
                                <td>
                                  <a
                                    class="
                                      btn
                                      btn-icon
                                      btn-light
                                      btn-hover-primary
                                      btn-sm
                                      delete
                                    "
                                    data-id="<%=disease_category[i]._id%>"
                                    data-api="disease_category"
                                    data-image="<%=disease_category[i].image%>"
                                  >
                                    <span
                                      class="
                                        svg-icon svg-icon-md svg-icon-primary
                                      "
                                    >
                                      <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        xmlns:xlink="http://www.w3.org/1999/xlink"
                                        width="24px"
                                        height="24px"
                                        viewBox="0 0 24 24"
                                        version="1.1"
                                      >
                                        <g
                                          stroke="none"
                                          stroke-width="1"
                                          fill="none"
                                          fill-rule="evenodd"
                                        >
                                          <rect
                                            x="0"
                                            y="0"
                                            width="24"
                                            height="24"
                                          ></rect>
                                          <path
                                            d="M6,8 L6,20.5 C6,21.3284271 6.67157288,22 7.5,22 L16.5,22 C17.3284271,22 18,21.3284271 18,20.5 L18,8 L6,8 Z"
                                            fill="#000000"
                                            fill-rule="nonzero"
                                          ></path>
                                          <path
                                            d="M14,4.5 L14,4 C14,3.44771525 13.5522847,3 13,3 L11,3 C10.4477153,3 10,3.44771525 10,4 L10,4.5 L5.5,4.5 C5.22385763,4.5 5,4.72385763 5,5 L5,5.5 C5,5.77614237 5.22385763,6 5.5,6 L18.5,6 C18.7761424,6 19,5.77614237 19,5.5 L19,5 C19,4.72385763 18.7761424,4.5 18.5,4.5 L14,4.5 Z"
                                            fill="#000000"
                                            opacity="0.3"
                                          ></path>
                                        </g>
                                      </svg>
                                    </span>
                                  </a>
                                </td>
                              </tr>
                              <%}%>
                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Modal -->
          <div class="modal fade" id="staticBackdrop" role="dialog">
            <div class="modal-dialog modal-xl">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">
                    &times;
                  </button>
                  <h4 class="modal-title">Heading</h4>
                </div>
                <div class="modal-body">
                  <form
                    id="edit_data"
                    method="POST"
                    action=""
                    enctype="multipart/form-data"
                  >
                    <div class="card-body pt-0 pb-4">
                      <div class="tab-content mt-2" id="myTabTable5">
                        <div
                          class="tab-pane fade show active"
                          id="kt_tab_table_5_3"
                          role="tabpanel"
                          aria-labelledby="kt_tab_table_5_3"
                        >
                          <div class="card-body">
                            <div class="form-group row">
                              <div class="col-lg-3" id="add_heading_field">
                                <label class="text-dark font-weight-bolder"
                                  >Image</label
                                >
                                <br />
                                <input
                                  type="file"
                                  name="image"
                                  id="updateImage"
                                />
                              </div>
                              <div class="col-lg-3">
                                <label class="text-dark font-weight-bolder"
                                  >Category</label
                                >
                                <br />
                                <input
                                  type="text"
                                  name="category"
                                  id="category_name_edit"
                                />
                              </div>
                              <div class="col-lg-5" id="add_disease_field">
                                <label class="text-dark font-weight-bolder"
                                  >Diseases</label
                                >
                              </div>
                              <div class="col-lg-1 pt-5">
                                <a
                                  class="
                                    btn
                                    btn-icon
                                    btn-light
                                    btn-hover-primary
                                    btn-sm
                                    mx-3
                                  "
                                  onclick="add_more_fields(event)"
                                >
                                  <span
                                    class="
                                      svg-icon svg-icon-primary svg-icon-2x
                                    "
                                  >
                                    <svg
                                      xmlns="http://www.w3.org/2000/svg"
                                      xmlns:xlink="http://www.w3.org/1999/xlink"
                                      width="24px"
                                      height="24px"
                                      viewBox="0 0 24 24"
                                      version="1.1"
                                    >
                                      <g
                                        stroke="none"
                                        stroke-width="1"
                                        fill="none"
                                        fill-rule="evenodd"
                                      >
                                        <rect
                                          fill="#000000"
                                          x="4"
                                          y="11"
                                          width="16"
                                          height="2"
                                          rx="1"
                                        />
                                        <rect
                                          fill="#000000"
                                          opacity="0.3"
                                          transform="translate(12.000000, 12.000000) rotate(-270.000000) translate(-12.000000, -12.000000) "
                                          x="4"
                                          y="11"
                                          width="16"
                                          height="2"
                                          rx="1"
                                        />
                                      </g>
                                    </svg>
                                  </span>
                                </a>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="card-footer">
                        <button type="submit" class="btn btn-warning mr-2">
                          Submit
                        </button>
                        <button
                          type="reset"
                          class="btn btn-secondary"
                          data-dismiss="modal"
                        >
                          Cancel
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>

          <div class="footer py-4 d-flex flex-lg-column" id="kt_footer">
            <div
              class="
                container
                d-flex
                flex-column flex-md-row
                align-items-center
                justify-content-between
              "
            >
              <div class="text-dark order-2 order-md-1">
                <span class="text-muted font-weight-bold mr-2">2021©</span>
                <a
                  href=" "
                  target="_blank"
                  class="text-dark-75 text-hover-primary"
                  >Proudly Powered by Trividha Team</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include("include/_kt_quick_search") %> <%-
    include("include/_kt_scroll_top") %> <%-
    include("include/_javascripts_srcs") %>

    <script>
      var room = 1;
      function add_fields() {
        room++;
        var objTo = document.getElementById("room_fileds");
        var divtest = document.createElement("div");
        divtest.innerHTML =
          '<div class="new-fields"><div class="img-field"><input type="file" name="image"></div> </div>';

        objTo.appendChild(divtest);
      }

      var room = 1;
      function add_fields1() {
        room++;
        var objTo = document.getElementById("room_fileds1");
        var divtest = document.createElement("div");
        divtest.innerHTML =
          '<div class="col-8"><textarea name="disease" id="" cols="30" rows="1"></textarea></div>';
        objTo.appendChild(divtest);
      }

      function add_more_fields(e) {
        e.preventDefault();
        $(`#add_disease_field`).append(
          '<textarea name="disease" id="" cols="60" rows="1" ></textarea><br/>'
        );
      }

      $(".table tbody td a.edit_with_get_data").click(function () {
        //manadetory data
        let _id = $(this).attr("data-id");
        let _api = $(this).attr("data-api");

        let request = {
          url: `https://trividhaa.herokuapp.com/api/${_api}?id=${_id}`,
          method: "GET",
        };
        $.ajax(request).done(function (response) {
          $("#edit_data").attr("action", `/api/${_api}/${_id}`);
          $("#category_name_edit").val(response.category);
          response.disease.forEach((element) => {
            $(`#add_disease_field`).append(
              `<br/><textarea name="disease" id="" cols="60" rows="1" >${element}</textarea>`
            );
          });
        });
      });
    </script>
  </body>
</html>
