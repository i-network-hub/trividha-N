<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Dashboard | Trividha|Disease Category</title>
    <%- include("include/_header") %>
    <link
      rel="stylesheet"
      href="http://netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <style>
      .menu-link i {
        color: #fff;
        font-size: 10px;
        margin-top: 5px;
      }

      .img-field {
        margin-top: 28px;
        margin-left: -185px;
      }
    </style>
  </head>

  <body
    id="kt_body"
    class="
      header-mobile-fixed
      aside-enabled aside-fixed aside-minimize-hoverable
    "
  >
    <%- include("include/_navbar") %>

    <div class="d-flex flex-column flex-root">
      <div class="d-flex flex-row flex-column-fluid page">
        <div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper">
          <div id="kt_header" class="header">
            <div class="container">
              <div
                class="d-flex align-items-center flex-wrap mr-1 mt-5 mt-lg-0"
              >
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                  <h4 class="text-dark font-weight-bold my-1 mr-5">
                    Dashboard
                    <small class="text-muted ml-2"
                      >updates and statistics</small
                    >
                  </h4>
                </div>
              </div>
            </div>
          </div>
          <div
            class="content d-flex flex-column flex-column-fluid"
            id="kt_content"
          >
            <div class="d-flex flex-column-fluid">
              <div class="container">
                <div class="card card-custom">
                  <div class="card-header border-0 pt-7">
                    <h3 class="card-title align-items-start flex-column">
                      <span
                        class="
                          card-label
                          font-weight-bold font-size-h4
                          text-dark-75
                        "
                        >Upload New Category</span
                      >
                    </h3>
                  </div>
                  <form
                    action="/api/disease_category"
                    method="POST"
                    id="upload_data"
                    enctype="multipart/form-data"
                  >
                    <div class="card-body pt-0 pb-4">
                      <div class="tab-content mt-2" id="myTabTable5">
                        <div
                          class="tab-pane fade show active"
                          id="kt_tab_table_5_3"
                          role="tabpanel"
                          aria-labelledby="kt_tab_table_5_3"
                        >
                          <form class="form">
                            <div class="card-body">
                              <div class="form-group row">
                                <div class="col-lg-4">
                                  <label class="text-dark font-weight-bolder"
                                    >Image
                                  </label>
                                  <br />
                                  <input type="file" name="image" id="" />
                                </div>
                                <div class="col-lg-4">
                                  <label class="text-dark font-weight-bolder"
                                    >Category</label
                                  >
                                  <br />
                                  <input type="text" name="category" />
                                </div>
                                <div class="col-lg-4">
                                  <label class="text-dark font-weight-bolder"
                                    >diseases</label
                                  >
                                  <br />

                                  <div class="row" id="room_fileds1">
                                    <div class="col-8">
                                      <textarea
                                        name="disease"
                                        id=""
                                        cols="30"
                                        rows="1"
                                      ></textarea>
                                    </div>
                                    <div class="col-4">
                                      <!-- <span id="room_fileds1"> -->
                                      <i
                                        class="ml-10 fas fa-plus-circle"
                                        id="more_fields"
                                        onclick="add_fields1();"
                                        value="Add More"
                                        aria-hidden="true"
                                      >
                                      </i>
                                      <!-- </span> -->
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </form>
                        </div>
                      </div>
                      <div class="card-footer">
                        <button type="submit" class="btn btn-warning mr-2">
                          Submit
                        </button>
                        <button type="reset" class="btn btn-secondary">
                          Cancel
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>

            <div class="d-flex flex-column-fluid mt-5">
              <div class="container">
                <div class="card card-custom">
                  <div class="card-header border-0 pt-7">
                    <h3 class="card-title align-items-start flex-column">
                      <span
                        class="
                          card-label
                          font-weight-bold font-size-h4
                          text-dark-75
                        "
                        >Category Details</span
                      >
                    </h3>
                    <div class="card-toolbar"></div>
                  </div>
                  <div class="card-body pt-0 pb-4">
                    <div class="tab-content mt-2" id="myTabTable5">
                      <div
                        class="tab-pane fade show active"
                        id="kt_tab_table_5_3"
                        role="tabpanel"
                        aria-labelledby="kt_tab_table_5_3"
                      >
                        <div class="table-responsive">
                          <table
