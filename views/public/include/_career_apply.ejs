<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
        <h4 class="modal-title">Apply for Career</h4>
      </div>
      <div class="modal-body">
        <form
          action="/api/career_pub"
          method="POST"
          id="upload_data"
          enctype="multipart/form-data"
        >
          <div class="col-lg-12 col-sm-12 col-xs-12 pt-20">
            <div class="col-md-6 col-sm-6 col-xs-12">
              <div class="form-group">
                <label for="name" class="frm-txt">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id=""
                  placeholder=""
                  name="name"
                  required
                />
              </div>

              <div class="form-group">
                <label for="designation" class="frm-txt">Designation</label>
                <input
                  type="text"
                  class="form-control"
                  id="designation"
                  placeholder=""
                  name="designation"
                  required
                  readonly
                />
              </div>
              <div class="form-group">
                <p class="frm-txt">
                  <input
                    type="file"
                    name="cvinput"
                    id="myFileInput"
                    onChange="display_image_name(this);"
                    accept="application/pdf,application/vnd.ms-excel"
                    style="display: none"
                    required
                  />
                  C.V &nbsp; &nbsp;
                  <button
                    type="button"
                    class="btn btn-default"
                    style="
                      color: #000;
                      background: #dddfd9;
                      padding: 3px 15px;
                      border-radius: 0;
                    "
                    onclick="document.getElementById('myFileInput').click()"
                  >
                    Browse
                  </button>
                  <span id="displayFileName"></span>
                </p>
              </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <div class="form-group">
                <label for="email" class="frm-txt">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id=""
                  placeholder=""
                  name="email"
                  required
                />
              </div>

              <div class="form-group">
                <label for="mobile" class="frm-txt">Mobile No</label>
                <input
                  type="number"
                  class="form-control"
                  id="mobile"
                  name="mobile"
                  required
                />
              </div>
              <div class="form-group">
                <p class="frm-txt">
                  <button
                    type="submit"
                    class="btn btn-default"
                    style="
                      color: #000;
                      background: #c77b2b;
                      padding: 3px 15px;
                      border-radius: 0;
                    "
                  >
                    Send
                  </button>
                </p>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
